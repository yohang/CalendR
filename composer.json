{
    "name": "yohang/calendr",
    "description": "Object Oriented calendar management",
    "keywords": ["date", "calendar", "events"],
    "homepage": "https://github.com/yohang/CalendR",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Yohan GIARELLI",
        "email": "yohan@giarel.li",
        "homepage": "http://yohan.giarel.li"
    }],
    "require": {
        "php": "^5.5|^7.0",
        "symfony/options-resolver": "^2.7|^3.0|^4.0"
    },

    "require-dev": {
        "doctrine/cache":               "^1.5",
        "doctrine/common":              "^2.5",
        "doctrine/orm":                 "^2.5",
        "phpunit/phpunit":              "^4.0",
        "silex/silex":                  "^1.3",
        "twig/twig":                    "^1.23|^2.0"
    },

    "autoload": {
        "psr-0": { "CalendR": "src/" }
